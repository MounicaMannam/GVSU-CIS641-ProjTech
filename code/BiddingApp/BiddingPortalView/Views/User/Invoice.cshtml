<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" rel="stylesheet"/>
<script src="~/js/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        invoicedata();
    });
    function invoicedata(){
        $.ajax({
        url: "http://localhost:57987/transact/getinvoice/" + sessionStorage.getItem("bidId"),
        type: "GET",
        dataType: "json",
        async: false,
        success: function (result) {
            $("#ivBuyerName").html(result.buyerName);
            $("#ivDate").html(result.endDate);
            $("#imageds").html('<img src="http://localhost:27311/Pimages/' + result.displayImage +'" width="100" height="100">');
            $("#ivProdName").html(result.productName);
            $("#ivProdPrice").html(result.startPrice);
            $("#subtotal").html(result.startPrice);
            $('#total').html(result.price);
        },
        error: function (result) {
            alert(result.responseText);
        }
    });
    }
</script>