<script src="~/js/jquery.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/custom/AddProduct.js"></script>
<div class="container">
    <div class="custom-body" id="model2">
        <h2>Add New Product</h2>
        <br />
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-5">
                        <select class="form-control" id="CategoryId" required style="border: 1px solid #ccd1e0;">
                            <option value="0">Select Category</option>
                        </select>
                    </div>
                    <div class="col-sm-5">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"
                            onclick="clearTextBox();"> Add Category </button>
                    </div>
                </div>
                <p id="CatNameErr" style="margin-left: 10px; margin-top: 10px;"></p>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                         <input type="text" class="form-control" id="ProductName" placeholder="Product Name" required style="border: 1px solid #ccd1e0;"/>
                         <p id="ProdNameErr" style="margin-left: 10px; margin-top: 10px;"></p>
                     </div>
                    <div class="col-6">
                         <input type="number" class="form-control" id="BasePrice" placeholder="Base Price" required style="border: 1px solid #ccd1e0;"/>
                         <p id="PriceErr" style="margin-left: 10px; margin-top: 10px;"></p>
                     </div>
                </div>  
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="SDescription" rows="1" onkeyup="charCount()" placeholder="Product Description" required style="border: 1px solid #ccd1e0;" maxlength="100"></textarea>
                <div class="row">
                <div class="col-11">
                    <p id="SDescErr" style="margin-left: 10px; margin-top: 10px;"></p>
                </div>
                <div class="col-1" style="padding-right: 0px;padding-left: 21px; margin-top: 10px;">
                    <span id="chars">0/100</span>
                </div>
                </div>
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="LDescription" placeholder="Product Description" required style="border: 1px solid #ccd1e0;"></textarea>
                <p id="LDescErr" style="margin-left: 10px; margin-top: 10px;"></p>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label>Bidding Start Date</label>
                        <input type="date" class="form-control" id="BiddingStartDate" placeholder="ReleaseDate" value="date"
                        min=new Date().Today required style="border: 1px solid #ccd1e0;"/>
                        <p id="StartDateErr" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                    <div class="col-6">
                        <label>Bidding End Date</label>
                        <input type="date" class="form-control" id="BiddingEndDate" placeholder="ReleaseDate" value="date"
                        min=new Date().Today required style="border: 1px solid #ccd1e0;"/>
                        <p id="EndDateErr" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label class="control-label"> Product Images</label>
                    </div>
                    <div class="col-3">
                        <label class="control-label">Copyrights</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <input type="file" class="form-control" id="ProductImage1" placeholder="Image" required style="border: 1px solid #ccd1e0; height:100%;"/>
                    </div>
                    <div class="col-3">
                        <input type="file" class="form-control" id="ProductImage2" placeholder="Image" required style="border: 1px solid #ccd1e0; height:100%;"/>
                    </div>
                    <div class="col-3">
                        <input type="file" class="form-control" id="ProductImage3" placeholder="Image" required style="border: 1px solid #ccd1e0; height:100%;"/>
                    </div>
                    <div class="col-3">
                        <input type="file" class="form-control" id="copyrights" placeholder="" required style="border: 1px solid #ccd1e0; height:100%;"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        <p id="img1Err" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                    <div class="col-3">
                        <p id="img2Err" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                    <div class="col-3">
                        <p id="img3Err" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                    <div class="col-3">
                        <p id="crimgErr" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer" style="border:0; justify-content:center;">
                <!--<button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button> -->
                <button type="button" class="btn btn-primary btn-lg" id="btnAdd" onclick="return productValidate();" style="border-radius:0.25rem;">Add Product</button>
            </div>
        </form>
        <!-- Modal Footer-->
    </div>
</div>
<!-- create a modal myModal-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="MyModalLabel">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:0.5rem;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="GenreName">Category Name</label>
                        <input type="text" class="form-control" id="CategoryName" placeholder="Name" style="border: 1px solid #ccd1e0;" required/>
                    </div>
                    <p id="CatErr" style="margin-left: 10px; margin-top: 10px;"></p>
                </form>
            </div>


            <!-- Modal Footer-->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return CategoryValidate();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;"
                    onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" style="color:#DC143C;">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade"  id="addproductmodal" data-backdrop="static" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">Product Added</div>
            <div class="modal-body"><h4>Your Product has been Added Successfully!...</h4></div>
            <div class="modal-footer">
                <a class="btn btn-primary" asp-controller="User" asp-action="Profile">Continue</a>
            </div>
        </div>
    </div>
</div>
