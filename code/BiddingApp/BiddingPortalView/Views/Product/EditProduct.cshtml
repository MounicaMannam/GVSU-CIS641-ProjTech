<script src="~/js/jquery.js"></script>
<script src="~/js/jquery.min.js"></script>
<div class="container">
    <div class="custom-body" id="model2">
        <h2>Edit Product</h2>
        <br />
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                         <input type="text" class="form-control" id="ProductName" placeholder="Product Name" required style="border: 1px solid #ccd1e0;"/>
                         <p id="ProdNameErr" style="margin-left: 10px; margin-top: 10px;"></p>
                     </div>
                    <div class="col-6">
                         <input type="number" class="form-control" id="BasePrice" placeholder="Base Price" required style="border: 1px solid #ccd1e0;"/>
                         <p id="PriceErr" style="margin-left: 10px; margin-top: 10px;"></p>
                     </div>
                </div>  
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="SDescription" rows="1" onkeyup="charCount()" placeholder="Product Description" required style="border: 1px solid #ccd1e0;" maxlength="100"></textarea>
                <div class="row">
                <div class="col-11">
                    <p id="SDescErr" style="margin-left: 10px; margin-top: 10px;"></p>
                </div>
                <div class="col-1" style="padding-right: 0px;padding-left: 21px; margin-top: 10px;">
                    <span id="chars">0/100</span>
                </div>
                </div>
            </div>

            <div class="form-group">
                <textarea type="text" class="form-control" id="LDescription" placeholder="Product Description" required style="border: 1px solid #ccd1e0;"></textarea>
                <p id="LDescErr" style="margin-left: 10px; margin-top: 10px;"></p>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label>Bidding Start Date</label>
                        <input type="date" class="form-control" id="BiddingStartDate" placeholder="ReleaseDate" value="date"
                        min=new Date().Today required style="border: 1px solid #ccd1e0;"/>
                        <p id="StartDateErr" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                    <div class="col-6">
                        <label>Bidding End Date</label>
                        <input type="date" class="form-control" id="BiddingEndDate" placeholder="ReleaseDate" value="date"
                        min=new Date().Today required style="border: 1px solid #ccd1e0;"/>
                        <p id="EndDateErr" style="margin-left: 10px; margin-top: 10px;"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border:0; justify-content:center;">
                <!--<button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button> -->
                <button type="button" class="btn btn-primary btn-lg" id="btnAdd" onclick="return productValidate();" style="border-radius:0.25rem;">Update Product</button>
            </div>
        </form>
        <!-- Modal Footer-->
    </div>
</div>
<script src="~/js/custom/EditProduct.js"></script>
