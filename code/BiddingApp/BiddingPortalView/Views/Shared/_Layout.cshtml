<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv='cache-control' content='no-cache'>
    <meta http-equiv='expires' content='0'>
    <meta http-equiv='pragma' content='no-cache'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Elite Bidding</title>
    <!-- Favicon -->
    <link href="http://localhost:27311/img/favicon.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />   

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <link href="~/css/custom/Loader.css" rel="stylesheet">

    
</head>
    <header>
        <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="/" class="text-decoration-none">
                    <img src="http://localhost:27311/img/logo.png" alt="logo" height="35%" width="35%">
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for products" style="border: 1px solid #ccd1e0;">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary" style="border: 1px solid #ccd1e0;">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 col-6 text-right">
                <a href="http://localhost:27311/user/messages" id="msg" class="btn" style="border: 1px solid #ccd1e0;padding-right: 6px;padding-top: 8px;padding-bottom: 1px;">
                    <i class="fas fa-envelope text-primary" style="font-size:x-large; margin-right:-10px;"></i>
                    <span id="msgs" style="font-size:xx-small;">0</span>
                </a>
                <span style="padding-right:5px!important;"></span>
                <a href="http://localhost:27311/user/wishlist" id="wishlistshow" class="btn" style="border: 1px solid #ccd1e0;">
                    <i class="fas fa-heart text-primary"></i>
                    <span class="badge" id="WishlistCount">0</span>
                </a>
                <span style="padding-right:5px!important;"></span>
                <a class="btn" id="cartshow" style="border: 1px solid #ccd1e0;" onclick="return cartpayment();">
                    <i class="fas fa-shopping-cart text-primary"></i>
                    <span class="badge" id="CartCount">0</span>
                </a>
            </div>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0" >
                            <a href="" class="text-decoration-none d-block d-lg-none">
                            <h1 class="m-0 display-5 font-weight-semi-bold text-primary">Elite</h1>
                            </a>
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse" style="padding:3px;">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="http://localhost:27311/" class="nav-item nav-link active"style="padding-left: 3px!important;">Home</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Categories</a>
                                <div class="dropdown-menu rounded-0 m-0" id="categoryld">
                                </div>
                            </div >
                            <a href="privacy.html" class="nav-item nav-link">Privacy</a>
                            <a href="contact.html" class="nav-item nav-link">Contact</a>
                            <a href="about.html" class="nav-item nav-link">About</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0" id="logoutcontent">
                            <div class="nav-item dropdown">
                                <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown" style="padding-right: 3px;"><i class="fa-solid fa-user-large"></i></a>
                                <div class="dropdown-menu dropdown-menu-right rounded-0 m-0">
                                    <a href="http://localhost:27311/user/signin" class="dropdown-item">Login</a>
                                    <a href="http://localhost:27311/user/signup" class="dropdown-item">Register</a>
                                </div>
                             </div>
                        </div>
                        <div class="navbar-nav ml-auto py-0" id="logincontent">
                            <div class="nav-item dropdown">
                                <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown" style="padding-right: 3px;"><i class="fa-solid fa-user-large"></i></a>
                                <div class="dropdown-menu dropdown-menu-right rounded-0 m-0">
                                    <a href="http://localhost:27311/user/profile" class="dropdown-item">My Profile</a>
                                    <a href="http://localhost:27311/product/addproduct" class="dropdown-item">Add Product</a>
                                    <a href="http://localhost:27311/user/messages" class="dropdown-item">Inbox</a>
                                    <button class="btn dropdown-item" onclick="return logout();">Logout</button>
                                </div>
                             </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5">
        <div class="row px-xl-5" style="padding-top:2rem; border-top: 1px solid #ccd1e0;">
            <div class="col-lg-4 col-md-12 " style="margin-bottom:1.5rem!important;">
                <a href="" class="text-decoration-none">
                    <img src="http://localhost:27311/img/favicon.png" alt="logo" height="25%" width="25%">
                </a>
                <p class="mt-2">Elite Bidding Pvt. Ltd.</p>
                <p class="mb-2">Organizers</p>
                <p class="mb-2">Pavan Kumar</p>
                <p class="mb-2">Mounica</p>
                <p class="mb-2">Caleb Cheruiyot</p>
                
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row" style="margin-top: 4px;">
                    <div class="col-md-4">
                        <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href="http://localhost:27311/"><i class="fa fa-angle-right mr-2"></i>Home</a>
                            <a class="text-dark mb-2" href="http://localhost:27311/user/profile"><i class="fa fa-angle-right mr-2"></i>Profile</a>
                            <a class="text-dark mb-2" href="http://localhost:27311/user/wishlist"><i class="fa fa-angle-right mr-2"></i>Wishlist</a>
                            <a class="text-dark mb-2" href="http://localhost:27311/user/messages"><i class="fa fa-angle-right mr-2"></i>Messages</a>
                          @*  <a class="text-dark mb-2" href="checkout.html"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                            <a class="text-dark" href="contact.html"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>*@
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h5 class="font-weight-bold text-dark mb-4">Newsletter</h5>
                        <form action="">
                            <div class="form-group">
                                <input type="text" class="form-control border-0 py-4" placeholder="Your Name" required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control border-0 py-4" placeholder="Your Email"
                                    required="required" />
                            </div>
                            <div>
                                <button class="btn btn-primary btn-block border-0 py-3" type="submit">Subscribe Now</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border-top border-light mx-xl-5 py-4" style="padding-top:1rem!important; padding-bottom:1rem!important;">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-dark">
                    &copy; <a class="text-dark font-weight-semi-bold" href="#">Elite Bidding</a>
                </p>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    </footer>

    <a href="#" class="btn btn-primary back-to-top" id="back-top" style="background-color: #1c1c1c !important; color:white!important; border-color:#1c1c1c !important;"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.js" ></script>
    <script src="~/js/popper.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>
    <script src="~/js/custom/Loader.js"></script>
    <script src="~/js/custom/CategoriesDropdown.js"></script>
    <script src="~/js/custom/LoginPartial.js"></script>
    <script src="~/js/custom/WishlistCount.js"></script>
    <script src="~/js/custom/MessageCount.js"></script>
    <script src="~/js/custom/Cart.js"></script>
    @RenderSection("Scripts", required: false)
